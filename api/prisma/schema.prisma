generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model Post {
  id        String  @id @default(cuid())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  String?
}

model User {
  id               String  @id @default(cuid())
  email            String  @unique
  name             String?
  surname          String?
  resetPasswordOtp Int?
  posts            Post[]
}
